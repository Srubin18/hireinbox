      {selectedCandidate && (
        <CandidateModal candidate={selectedCandidate} onClose={() => setSelectedCandidate(null)} getInitials={getInitials} formatWhatsApp={formatWhatsApp} />
      )}

      {/* New Role Modal */}
      {showNewRoleModal && (
        <NewRoleModal onClose={() => setShowNewRoleModal(false)} onCreated={() => { fetchRoles(); setShowNewRoleModal(false); }} />
      )}
    </div>
  );
}


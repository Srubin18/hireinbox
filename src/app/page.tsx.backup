                    <option value="50000-80000">R50,000 - R80,000/mo</option>
                    <option value="80000-120000">R80,000 - R120,000/mo</option>
                    <option value="120000+">R120,000+/mo</option>
                  </select>
                </div>
              </div>
            </>
          )}

          {step === 2 && (
            <>
              <div style={{ marginBottom: 24 }}>
                <label style={{ display: 'block', fontSize: '0.9rem', fontWeight: 700, color: '#0f172a', marginBottom: 10 }}>âš¡ Must-have Skills</label>
                <p style={{ fontSize: '0.8rem', color: '#64748b', marginBottom: 10 }}>Candidates without these will be auto-rejected</p>
                <input type="text" value={skills} onChange={e => setSkills(e.target.value)} placeholder="e.g. Python, Django, PostgreSQL, REST APIs" style={{ width: '100%', padding: '16px 18px', border: '2px solid #e2e8f0', borderRadius: 12, fontSize: '1rem' }} />
                <div style={{ fontSize: '0.75rem', color: '#94a3b8', marginTop: 6 }}>Separate with commas</div>
              </div>

              <div style={{ marginBottom: 24 }}>
                <label style={{ display: 'block', fontSize: '0.9rem', fontWeight: 700, color: '#0f172a', marginBottom: 10 }}>âœ¨ Nice-to-have</label>
                <p style={{ fontSize: '0.8rem', color: '#64748b', marginBottom: 10 }}>Bonus points for candidates with these</p>
                <input type="text" value={qualifications} onChange={e => setQualifications(e.target.value)} placeholder="e.g. AWS certified, Agile experience, Team lead experience" style={{ width: '100%', padding: '16px 18px', border: '2px solid #e2e8f0', borderRadius: 12, fontSize: '1rem' }} />
              </div>

              <div style={{ marginBottom: 24 }}>
                <label style={{ display: 'block', fontSize: '0.9rem', fontWeight: 700, color: '#0f172a', marginBottom: 10 }}>ðŸš« Dealbreakers</label>
                <p style={{ fontSize: '0.8rem', color: '#64748b', marginBottom: 10 }}>Auto-reject if any of these are present</p>
                <input type="text" value={dealbreakers} onChange={e => setDealbreakers(e.target.value)} placeholder="e.g. Job hopping (5+ jobs in 3 years), No references" style={{ width: '100%', padding: '16px 18px', border: '2px solid #fee2e2', borderRadius: 12, fontSize: '1rem', background: '#fffbfb' }} />
              </div>
            </>
          )}

          {step === 3 && (
            <>
              <div style={{ marginBottom: 24 }}>
                <label style={{ display: 'block', fontSize: '0.9rem', fontWeight: 700, color: '#0f172a', marginBottom: 10 }}>ðŸ“ Preferred Locations</label>
                <p style={{ fontSize: '0.8rem', color: '#64748b', marginBottom: 10 }}>Where should candidates be based?</p>
                <input type="text" value={locations} onChange={e => setLocations(e.target.value)} placeholder="e.g. Johannesburg, Cape Town, Remote, Hybrid" style={{ width: '100%', padding: '16px 18px', border: '2px solid #e2e8f0', borderRadius: 12, fontSize: '1rem' }} />
              </div>

              {/* Summary Preview */}
              <div style={{ background: 'linear-gradient(135deg, #f8fafc, #eef2ff)', borderRadius: 16, padding: 20, border: '1px solid #e2e8f0' }}>
                <div style={{ fontSize: '0.85rem', fontWeight: 700, color: '#4F46E5', marginBottom: 12 }}>ðŸ“‹ ROLE SUMMARY</div>
                <div style={{ fontSize: '1.1rem', fontWeight: 700, color: '#0f172a', marginBottom: 8 }}>{title || 'Untitled Role'}</div>
                <div style={{ display: 'flex', flexWrap: 'wrap', gap: 8 }}>
                  {minExp > 0 && <span style={{ padding: '4px 10px', background: '#4F46E5', color: 'white', borderRadius: 6, fontSize: '0.75rem', fontWeight: 600 }}>{minExp}+ years</span>}
                  {employmentType && <span style={{ padding: '4px 10px', background: '#059669', color: 'white', borderRadius: 6, fontSize: '0.75rem', fontWeight: 600 }}>{employmentType}</span>}
                  {education !== 'any' && <span style={{ padding: '4px 10px', background: '#f97316', color: 'white', borderRadius: 6, fontSize: '0.75rem', fontWeight: 600 }}>{education}</span>}
                  {skills && skills.split(',').slice(0, 3).map((s, i) => <span key={i} style={{ padding: '4px 10px', background: '#e2e8f0', color: '#475569', borderRadius: 6, fontSize: '0.75rem', fontWeight: 600 }}>{s.trim()}</span>)}
                </div>
              </div>
            </>
          )}
        </div>

        {/* Footer */}
        <div style={{ display: 'flex', justifyContent: 'space-between', padding: '20px 28px', borderTop: '1px solid #e2e8f0', background: '#f8fafc' }}>
          {step > 1 ? (
            <button onClick={() => setStep(step - 1)} style={{ padding: '12px 24px', background: 'white', border: '2px solid #e2e8f0', borderRadius: 10, fontSize: '0.95rem', fontWeight: 600, cursor: 'pointer', color: '#475569' }}>â† Back</button>
          ) : (
            <button onClick={onClose} style={{ padding: '12px 24px', background: 'white', border: '2px solid #e2e8f0', borderRadius: 10, fontSize: '0.95rem', fontWeight: 600, cursor: 'pointer', color: '#475569' }}>Cancel</button>
          )}
          
          {step < 3 ? (
            <button onClick={() => setStep(step + 1)} disabled={step === 1 && !title} style={{ padding: '12px 32px', background: 'linear-gradient(135deg, #4F46E5, #7C3AED)', color: 'white', border: 'none', borderRadius: 10, fontSize: '0.95rem', fontWeight: 700, cursor: 'pointer', opacity: step === 1 && !title ? 0.5 : 1, boxShadow: '0 4px 12px rgba(79,70,229,0.3)' }}>Next â†’</button>
          ) : (
            <button onClick={handleCreate} disabled={isCreating || !title} style={{ padding: '12px 32px', background: 'linear-gradient(135deg, #059669, #047857)', color: 'white', border: 'none', borderRadius: 10, fontSize: '0.95rem', fontWeight: 700, cursor: 'pointer', opacity: isCreating || !title ? 0.5 : 1, boxShadow: '0 4px 12px rgba(5,150,105,0.3)' }}>
              {isCreating ? 'â³ Creating...' : 'âœ¨ Create Role & Start Screening'}
            </button>
          )}
        </div>
      </div>
    </div>
  );
}
